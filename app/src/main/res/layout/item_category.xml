<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:layout_marginHorizontal="@dimen/half_main_indentation_favorites_category_buttons"
    android:layout_marginVertical="@dimen/half_main_indentation_favorites_category_buttons"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/half_main_indentation_favorites_category_buttons">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_category_height"
            android:contentDescription="@string/category_logo"
            android:scaleType="centerCrop"
            tools:src="assets/burger.png" />

        <TextView
            android:id="@+id/tv_title_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/half_main_indentation_favorites_category_buttons"
            android:layout_marginVertical="@dimen/half_main_indentation_favorites_category_buttons"
            android:fontFamily="@font/montserrat_alternates_semi_bold"
            android:lineHeight="@dimen/main_indentation_favorites_category_buttons"
            android:text="@string/item_burger"
            android:textAllCaps="true"
            android:textColor="@color/color_tv_header"
            android:textSize="@dimen/text_size_footer_button"
            android:contentDescription=""/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginHorizontal="@dimen/half_main_indentation_favorites_category_buttons"
            android:layout_marginVertical="@dimen/half_main_indentation_favorites_category_buttons"
            android:fontFamily="@font/montserrat_medium"
            android:lineHeight="@dimen/main_indentation_favorites_category_buttons"
            android:text="@string/item_description"
            android:textSize="@dimen/text_size_tv_item_footer"
            android:contentDescription=""/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
