<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_recipe"
    android:layout_height="132dp"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="@dimen/half_main_indentation_favorites_category_buttons"
    android:layout_marginVertical="@dimen/half_main_indentation_favorites_category_buttons"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/half_main_indentation_favorites_category_buttons">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
    <ImageView
        android:id="@+id/image_burger"
        android:layout_width="match_parent"
        android:layout_height="@dimen/iv_burgers_height"
        android:contentDescription="@string/burger_recipe"
        android:scaleType="centerCrop"
        tools:src="assets/burgers/burger-avocado.png"/>

    <TextView
        android:id="@+id/tv_title_burger_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/half_main_indentation_favorites_category_buttons"
        android:layout_marginVertical="@dimen/half_main_indentation_favorites_category_buttons"
        android:fontFamily="@font/montserrat_alternates_semi_bold"
        android:lineHeight="@dimen/main_indentation_favorites_category_buttons"
        android:text="@string/item_cheeseburger"
        android:textAllCaps="true"
        android:textColor="@color/color_tv_header"
        android:textSize="@dimen/text_size_footer_button"
        android:contentDescription=""/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
